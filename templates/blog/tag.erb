---
title:      "Tag: <%= title %>"
created_at: <%= Time.now.to_y %>
filter:     erb
dirty:      true
autogenrated: true
---
<div class='index' id='body'>
<%%
  articles = @pages.find(:all, :in_directory => "/", :recursive => true,
      :sort_by => "created_at", :reverse => true, :blog_post => true
      ) { |page| page.tags.include?("<%= tag %>") if page.tags }
  articles.delete(@page)
  paginate(articles, 10) do |page|
-%>
  <%%= render :partial => '/article_list', :locals => { :page => page } %>
<%% end -%>
</div>
<%%= pagination_links %>